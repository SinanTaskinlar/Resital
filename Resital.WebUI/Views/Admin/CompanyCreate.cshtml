@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<Resital.DTO.CompanyTypeDto>

<form method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputEmail4">Name</label>
            <input type="text" class="form-control" name="Name" id="inputEmail4" placeholder="İsim">
        </div>
    </div>
    <div class="form-group col-md-6">
        <label for="inputAddress">Address</label>
        <input type="text" class="form-control" name="Address" id="inputAddress" placeholder="İlçe/Mahalle/Sokak">
    </div>
    <div class="form-group col-md-6">
        <label for="exampleFormControlTextarea1">Açıklama</label>
        <textarea class="form-control col-md-6" name="Note" id="exampleFormControlTextarea1" rows="3"></textarea>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputState">Company Type</label>
            <select id="inputState" name="CompanyTypeId" class="form-control">
                <option selected>Choose...</option>
                @foreach (var a in Model)
                {
                    <option value="@a.Id">@a.TypeName</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group ">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck">
            <label class="form-check-label" for="gridCheck">
                Check me out
            </label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>